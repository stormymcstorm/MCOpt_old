{
  "name": "MCOpt Devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "postStartCommand": "pip install -e .",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/.venv/bin/python"
      }
    }
  },
  // Uncomment this to enable gpu usage
  // "runArgs": ["--gpus", "all"]
}
